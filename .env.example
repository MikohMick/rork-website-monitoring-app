# Environment Configuration for Website Monitoring App

# Backend API Base URL
# For Rork backend (preferred)
EXPO_PUBLIC_RORK_API_BASE_URL=https://your-rork-backend-url.com

# Alternative backend URLs for different environments
# EXPO_PUBLIC_RORK_API_BASE_URL=http://localhost:3000
# EXPO_PUBLIC_RORK_API_BASE_URL=https://your-vercel-backend.vercel.app

# App Configuration
EXPO_PUBLIC_APP_NAME="Website Monitoring App"
EXPO_PUBLIC_APP_VERSION="1.0.0"

# Notification Configuration
EXPO_PUBLIC_ENABLE_NOTIFICATIONS=true

# Debug Configuration
EXPO_PUBLIC_DEBUG_MODE=false